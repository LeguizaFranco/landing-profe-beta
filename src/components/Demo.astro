<script is:inline>
    (() => {
        // Función switchDemo para desktop
        function switchDemo(featureId) {
            // 1) Reset tabs
            document.querySelectorAll("#demos .demo-tab").forEach((tab) => {
                tab.classList.remove(
                    "active",
                    "bg-gray-800",
                    "border-gray-700",
                );
                tab.classList.add("border-transparent");

                const iconBg = tab.querySelector(".icon-container");
                if (iconBg) {
                    iconBg.classList.remove(
                        "bg-brand-blue",
                        "text-white",
                        "bg-blue-900/50",
                        "text-blue-400",
                    );
                    iconBg.classList.add("bg-gray-800", "text-gray-500");
                }

                const title = tab.querySelector("h3");
                if (title) {
                    title.classList.remove("text-brand-blue", "text-white");
                    title.classList.add("text-gray-300");
                }
            });

            // 2) Hide all images
            document.querySelectorAll("#demos .demo-img").forEach((img) => {
                img.classList.remove("opacity-100");
                img.classList.add("opacity-0");
            });

            // 3) Activate clicked tab
            const activeTab = document.getElementById(`btn-${featureId}`);
            if (activeTab) {
                activeTab.classList.add(
                    "active",
                    "bg-gray-800",
                    "border-gray-700",
                );
                activeTab.classList.remove("border-transparent");

                const activeIcon = activeTab.querySelector(".icon-container");
                if (activeIcon) {
                    activeIcon.classList.remove(
                        "bg-gray-800",
                        "text-gray-500",
                        "bg-blue-900/50",
                        "text-blue-400",
                    );
                    activeIcon.classList.add("bg-brand-blue", "text-white");
                }

                const activeTitle = activeTab.querySelector("h3");
                if (activeTitle) {
                    activeTitle.classList.remove("text-gray-300", "text-white");
                    activeTitle.classList.add("text-brand-blue");
                }
            }

            // 4) Show selected image
            const activeImg = document.getElementById(`img-${featureId}`);
            if (activeImg) {
                activeImg.classList.remove("opacity-0");
                activeImg.classList.add("opacity-100");
            }
        }

        window.switchDemo = switchDemo;

        // Inicializar estado desktop
        const initial =
            document
                .querySelector("#demos .demo-tab.active")
                ?.id?.replace("btn-", "") ?? "aula";
        switchDemo(initial);

        // Función para abrir pantalla completa en Desktop
        function openFullscreenDesktop() {
            const activeVideo = document.querySelector(
                "#demos .demo-img.opacity-100",
            );
            if (!activeVideo) return;

            activeVideo.play();

            if (activeVideo.requestFullscreen) {
                activeVideo.requestFullscreen();
            } else if (activeVideo.webkitRequestFullscreen) {
                activeVideo.webkitRequestFullscreen();
            } else if (activeVideo.mozRequestFullScreen) {
                activeVideo.mozRequestFullScreen();
            } else if (activeVideo.msRequestFullscreen) {
                activeVideo.msRequestFullscreen();
            }
        }

        window.openFullscreenDesktop = openFullscreenDesktop;

        // Función para abrir pantalla completa en Mobile
        function openFullscreenMobile(videoId) {
            const video = document.getElementById(videoId);
            if (!video) return;

            video.play();

            if (video.requestFullscreen) {
                video.requestFullscreen();
            } else if (video.webkitRequestFullscreen) {
                video.webkitRequestFullscreen();
            } else if (video.mozRequestFullScreen) {
                video.mozRequestFullScreen();
            } else if (video.msRequestFullscreen) {
                video.msRequestFullscreen();
            }
        }

        window.openFullscreenMobile = openFullscreenMobile;

        // Auto-play videos mobile cuando entran en viewport
        const mobileVideos = document.querySelectorAll(
            "#demos .lg\\:hidden video",
        );

        if (mobileVideos.length > 0) {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        const video = entry.target;
                        if (entry.isIntersecting) {
                            video.play();
                        } else {
                            video.pause();
                        }
                    });
                },
                { threshold: 0.5 },
            );

            mobileVideos.forEach((video) => observer.observe(video));
        }
    })();
</script>
